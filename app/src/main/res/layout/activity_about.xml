<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.AboutActivity">


    <View
        android:id="@+id/titleBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/titleBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleBg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/icon_back"
        app:layout_constraintBottom_toBottomOf="@+id/titleBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleBg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconLogo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_45"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textColor="@color/color_333333"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconLogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        tools:text="1.0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textCurrentVersion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="@dimen/dp_55"
        android:gravity="center_vertical"
        android:text="当前版本"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textVersion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="38dp"
        android:gravity="center_vertical"
        android:text="App简介"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textCurrentVersion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textBigMoment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="38dp"
        android:gravity="center_vertical"
        android:text="品牌大事件"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textInfo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="38dp"
        android:gravity="center_vertical"
        android:text="版本说明"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textBigMoment" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_10"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/textProfile"
        app:layout_constraintRight_toRightOf="@+id/textProfile"
        app:layout_constraintTop_toTopOf="@+id/textProfile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_10"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/textBigMoment"
        app:layout_constraintRight_toRightOf="@+id/textBigMoment"
        app:layout_constraintTop_toTopOf="@+id/textBigMoment" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_10"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/textInfo"
        app:layout_constraintRight_toRightOf="@+id/textInfo"
        app:layout_constraintTop_toTopOf="@+id/textInfo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowVersion"
        android:layout_width="@dimen/dp_10"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/textCurrentVersion"
        app:layout_constraintRight_toRightOf="@+id/textCurrentVersion"
        app:layout_constraintTop_toTopOf="@+id/textCurrentVersion" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textCurrentVersion"
        app:layout_constraintRight_toLeftOf="@+id/arrowVersion"
        app:layout_constraintTop_toTopOf="@+id/textCurrentVersion"
        tools:text="1.0.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/color_E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/textCurrentVersion" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/color_E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/textInfo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/color_E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/textBigMoment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/color_E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/textProfile" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/color_E6E6E6"
        app:layout_constraintBottom_toBottomOf="@+id/textProfile" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textContract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_40"
        android:gravity="center"
        android:maxLines="2"
        android:text="《服务协议》"
        android:textColor="@color/color_9C67E6"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textPrivacy"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_40"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_15"
        android:text="《隐私政策》"
        android:textColor="@color/color_9C67E6"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textContract"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>