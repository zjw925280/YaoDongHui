<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bg_bottom"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_layout_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/bg_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_layout_2"
        app:layout_constraintTop_toTopOf="@id/bg_bottom">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_1"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_btn_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/color_999999"
            android:textSize="11sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_layout_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/bg_bottom"
        app:layout_constraintLeft_toRightOf="@+id/btn_layout_1"
        app:layout_constraintRight_toLeftOf="@+id/btn_layout_3"
        app:layout_constraintTop_toTopOf="@id/bg_bottom">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_2"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_btn_2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="券商"
            android:textColor="@color/color_999999"
            android:textSize="11sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_layout_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/bg_bottom"
        app:layout_constraintLeft_toRightOf="@+id/btn_layout_2"
        app:layout_constraintRight_toLeftOf="@+id/btn_layout_4"
        app:layout_constraintTop_toTopOf="@id/bg_bottom">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_3"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_btn_3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="曝光"
            android:textColor="@color/color_999999"
            android:textSize="11sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_layout_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/bg_bottom"
        app:layout_constraintLeft_toRightOf="@+id/btn_layout_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_bottom">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_4"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bottom_btn_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textColor="@color/color_999999"
            android:textSize="11sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>