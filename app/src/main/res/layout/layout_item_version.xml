<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="V1.0.3版更新内容" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/dp_34"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingHorizontal="@dimen/dp_12"
        android:rotation="180"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_arrow_up"
        app:layout_constraintBottom_toBottomOf="@+id/textTitle"
        app:layout_constraintRight_toRightOf="@id/textTitle"
        app:layout_constraintTop_toTopOf="@+id/textTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_14"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        tools:text="新增创建分享可以进行权限设置的功能，包含允许预览、无限制或限制预览次数（1~99次），允许保存/下载、无限制或限制保存/下载次数（1~99次），仅企业内用户可访问。" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:background="@color/color_E6E6E6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>