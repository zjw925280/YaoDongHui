<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F7F7F7"
    tools:context=".ui.activity.SettingActivity">

    <View
        android:id="@+id/titleBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/titleBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleBg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/icon_back"
        app:layout_constraintBottom_toBottomOf="@+id/titleBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleBg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelAvatar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="头像"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/titleBg"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelNickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="昵称"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/labelAvatar"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelSex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="性别"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/labelNickname"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelModifyPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="修改密码"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/labelSex"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelIdentity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="实名认证"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/labelModifyPwd"
        tools:ignore="RtlSymmetry" />
<RelativeLayout
    android:id="@+id/relayoutche"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    app:layout_constraintTop_toBottomOf="@+id/labelIdentity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView

        android:layout_centerVertical="true"
        android:id="@+id/labelClearCache"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="清除缓存"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_toLeftOf="@+id/iconClearCache"
        android:layout_centerVertical="true"
        android:id="@+id/labelClearCache_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="0KB"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_centerVertical="true"
        android:id="@+id/iconClearCache"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:adjustViewBounds="true"
        android:paddingHorizontal="5dp"
        android:paddingVertical="@dimen/dp_20"
        android:src="@mipmap/icon_right_arrow"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnAvatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelAvatar"
        app:layout_constraintRight_toRightOf="@+id/labelAvatar"
        app:layout_constraintTop_toTopOf="@+id/labelAvatar"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/labelNickname"
        app:layout_constraintRight_toLeftOf="@+id/iconNickname"
        app:layout_constraintTop_toTopOf="@+id/labelNickname"
        tools:text="123456" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconNickname"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="@dimen/dp_20"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/labelNickname"
        app:layout_constraintRight_toRightOf="@id/labelNickname"
        app:layout_constraintTop_toTopOf="@+id/labelNickname" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/labelSex"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintLeft_toLeftOf="@+id/labelSex"
        app:layout_constraintRight_toRightOf="@id/labelSex"
        app:layout_constraintTop_toTopOf="@+id/labelSex">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/radioMan"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_radio_bg" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_5"
            android:text="男"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/radioWoman"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="@dimen/dp_25"
            android:adjustViewBounds="true"
            android:src="@drawable/btn_radio_bg" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_5"
            android:text="女"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconModifyPwd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="@dimen/dp_20"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/labelModifyPwd"
        app:layout_constraintRight_toRightOf="@id/labelModifyPwd"
        app:layout_constraintTop_toTopOf="@+id/labelModifyPwd" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconIdentity"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="@dimen/dp_20"
        android:src="@mipmap/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/labelIdentity"
        app:layout_constraintRight_toRightOf="@id/labelIdentity"
        app:layout_constraintTop_toTopOf="@+id/labelIdentity" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_btn_logout"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_10"
        android:text="退出登录"
        android:textColor="@color/color_9C67E6"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDestroy" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnDestroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/bg_btn_destroy"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_10"
        android:text="注销账户"
        android:textColor="@color/color_999999"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>